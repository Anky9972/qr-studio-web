generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String         @id @default(cuid())
  name                  String?
  email                 String?        @unique
  emailVerified         DateTime?
  image                 String?
  password              String?
  role                  String         @default("user")
  plan                  String         @default("free")
  planExpiry            DateTime?
  isAdmin               Boolean        @default(false)
  subscription          String         @default("FREE")
  lastLoginAt           DateTime?
  emailNotifications    Boolean        @default(true)
  scanAlerts            Boolean        @default(false)
  weeklyReports         Boolean        @default(true)
  limitWarnings         Boolean        @default(true)
  expirationReminders   Boolean        @default(true)
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt
  accounts              Account[]
  apiKeys               ApiKey[]
  campaigns             Campaign[]
  qrCodes               QRCode[]
  sessions              Session[]
  teamMembers           TeamMember[]
  templates             Template[]
  webhooks              Webhook[]
  customDomains         CustomDomain[]
  microsites            Microsite[]
  notificationSettings  NotificationSetting[]
  linkInBios            LinkInBio[]
  vCardPlus             VCardPlus[]
  digitalMenus          DigitalMenu[]
  leadGates             LeadGate[]
  auditLogs             AuditLog[]
  complianceSettings    ComplianceSettings?

  @@index([lastLoginAt])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model QRCode {
  id           String         @id @default(cuid())
  userId       String
  name         String?
  type         String
  content      String
  qrType       String
  size         Int            @default(512)
  foreground   String         @default("#000000")
  background   String         @default("#FFFFFF")
  logo         String?
  errorLevel   String         @default("M")
  pattern      String         @default("square")
  design       Json?
  shortUrl     String?        @unique
  destination  String?
  password     String?
  expiresAt    DateTime?
  campaignId   String?
  tags         String[]
  favorite     Boolean        @default(false)
  scanCount    Int            @default(0)
  maxScans     Int?
  lastScanned  DateTime?
  customDomain String?
  frameId      String?
  micrositeId  String?
  linkInBioId  String?
  vCardPlusId  String?
  digitalMenuId String?
  leadGateId   String?
  utmParams    Json?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  campaign     Campaign?      @relation(fields: [campaignId], references: [id])
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  scans        Scan[]
  routingRules RoutingRule[]
  pixelConfigs PixelConfig[]
  linkInBio    LinkInBio?     @relation(fields: [linkInBioId], references: [id])
  vCardPlus    VCardPlus?     @relation(fields: [vCardPlusId], references: [id])
  digitalMenu  DigitalMenu?   @relation(fields: [digitalMenuId], references: [id])
  leadGate     LeadGate?      @relation(fields: [leadGateId], references: [id])

  @@index([userId])
  @@index([shortUrl])
  @@index([campaignId])
  @@index([customDomain])
}

model Scan {
  id        String   @id @default(cuid())
  qrCodeId  String
  ipAddress String?
  userAgent String?
  country   String?
  city      String?
  device    String?
  browser   String?
  os        String?
  referrer  String?
  visitorId String?
  isUnique  Boolean  @default(true)
  scannedAt DateTime @default(now())
  qrCode    QRCode   @relation(fields: [qrCodeId], references: [id], onDelete: Cascade)

  @@index([qrCodeId])
  @@index([scannedAt])
  @@index([visitorId])
  @@index([isUnique])
}

model Template {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  category    String
  public      Boolean  @default(false)
  design      Json
  preview     String?
  useCount    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([category])
}

model Campaign {
  id          String    @id @default(cuid())
  userId      String
  name        String
  description String?
  startDate   DateTime?
  endDate     DateTime?
  tags        String[]  @default([])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  qrCodes     QRCode[]

  @@index([userId])
}

model Team {
  id        String       @id @default(cuid())
  name      String
  plan      String       @default("business")
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  members   TeamMember[]
}

model TeamMember {
  id       String   @id @default(cuid())
  teamId   String
  userId   String
  role     String   @default("viewer")
  joinedAt DateTime @default(now())
  team     Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
  @@index([teamId])
  @@index([userId])
}

model ApiKey {
  id         String    @id @default(cuid())
  userId     String
  name       String
  keyHash    String    @unique
  keyPrefix  String
  lastUsedAt DateTime?
  expiresAt  DateTime?
  createdAt  DateTime  @default(now())
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([keyHash])
}

model Announcement {
  id             String   @id @default(cuid())
  title          String
  message        String
  type           String   @default("info")
  active         Boolean  @default(true)
  targetAudience String   @default("all")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([active])
  @@index([targetAudience])
}

model Offer {
  id              String   @id @default(cuid())
  title           String
  description     String
  discountPercent Int
  couponCode      String   @unique
  validFrom       DateTime
  validUntil      DateTime
  targetPlan      String   @default("all")
  active          Boolean  @default(true)
  usageCount      Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([couponCode])
  @@index([active])
  @@index([validUntil])
}

model Webhook {
  id           String       @id @default(cuid())
  userId       String
  url          String
  events       String[]
  secret       String
  active       Boolean      @default(true)
  lastUsedAt   DateTime?
  failureCount Int          @default(0)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs         WebhookLog[]

  @@index([userId])
  @@index([active])
}

model WebhookLog {
  id         String   @id @default(cuid())
  webhookId  String
  event      String
  payload    Json
  response   Json?
  statusCode Int?
  success    Boolean
  attempt    Int      @default(1)
  error      String?
  createdAt  DateTime @default(now())
  webhook    Webhook  @relation(fields: [webhookId], references: [id], onDelete: Cascade)

  @@index([webhookId])
  @@index([createdAt])
  @@index([event])
}

// ===== SMART ROUTING & CONDITIONAL LOGIC =====
model RoutingRule {
  id          String   @id @default(cuid())
  qrCodeId    String
  type        String   // 'device', 'time', 'language', 'scanLimit', 'geo'
  condition   Json     // Stores rule conditions
  destination String   // Target URL for this rule
  priority    Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  qrCode      QRCode   @relation(fields: [qrCodeId], references: [id], onDelete: Cascade)

  @@index([qrCodeId])
  @@index([type])
  @@index([active])
}

// ===== MARKETING & RETARGETING =====
model PixelConfig {
  id             String   @id @default(cuid())
  qrCodeId       String
  provider       String   // 'facebook', 'google', 'linkedin', 'custom'
  pixelId        String
  events         String[] // Conversion events to track
  delayRedirect  Int      @default(1000) // Milliseconds before redirect
  active         Boolean  @default(true)
  scriptContent  String?  // For custom pixels
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  qrCode         QRCode   @relation(fields: [qrCodeId], references: [id], onDelete: Cascade)

  @@index([qrCodeId])
  @@index([provider])
}

// ===== WHITE-LABELING & CUSTOM DOMAINS =====
model CustomDomain {
  id                String    @id @default(cuid())
  userId            String
  domain            String    @unique
  verified          Boolean   @default(false)
  sslEnabled        Boolean   @default(false)
  cnameTarget       String    @default("qrstudio.app")
  verificationToken String    @unique
  verifiedAt        DateTime?
  lastChecked       DateTime?
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([domain])
  @@index([verified])
}

// ===== MICROSITE BUILDER =====
model Microsite {
  id          String   @id @default(cuid())
  userId      String
  slug        String   @unique
  title       String
  description String?
  type        String   // 'linkinbio', 'menu', 'portfolio', 'event', 'custom'
  theme       Json?    // Color scheme, fonts, etc.
  content     Json     // Page content blocks
  seo         Json?    // Meta tags, og tags
  customCss   String?
  published   Boolean  @default(false)
  viewCount   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([slug])
  @@index([type])
  @@index([published])
}

// ===== CTA FRAMES =====
model CTAFrame {
  id          String   @id @default(cuid())
  name        String
  category    String   // 'social', 'wifi', 'menu', 'scan', 'custom'
  svgContent  String   // SVG template with variables
  preview     String?  // Preview image URL
  variables   Json     // Customizable text/colors
  premium     Boolean  @default(false)
  useCount    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
  @@index([premium])
}

// ===== NOTIFICATION SETTINGS =====
model NotificationSetting {
  id          String   @id @default(cuid())
  userId      String
  type        String   // 'scan_alert', 'weekly_report', 'limit_warning', 'expiration_reminder'
  enabled     Boolean  @default(true)
  frequency   String?  // 'immediate', 'daily', 'weekly'
  threshold   Int?     // For limit warnings (percentage)
  qrCodeIds   String[] // Specific QR codes to monitor (empty = all)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type])
  @@index([userId])
  @@index([type])
}

// ===== NOTIFICATION LOG =====
model NotificationLog {
  id        String   @id @default(cuid())
  userId    String
  type      String
  subject   String
  message   String
  sentAt    DateTime @default(now())
  success   Boolean
  error     String?

  @@index([userId])
  @@index([sentAt])
  @@index([type])
}

// ===== LINK IN BIO / SOCIAL PAGE =====
model LinkInBio {
  id           String         @id @default(cuid())
  userId       String
  slug         String         @unique
  title        String
  description  String?
  profileImage String?
  theme        Json?          // Colors, fonts, layout style
  links        Json           // Array of {title, url, icon, visible}
  socialLinks  Json?          // Social media handles
  analytics    Boolean        @default(true)
  viewCount    Int            @default(0)
  published    Boolean        @default(true)
  customCss    String?
  seo          Json?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  qrCodes      QRCode[]

  @@index([userId])
  @@index([slug])
  @@index([published])
}

// ===== VCARD PLUS (HOSTED DIGITAL BUSINESS CARD) =====
model VCardPlus {
  id              String   @id @default(cuid())
  userId          String
  slug            String   @unique
  firstName       String
  lastName        String
  company         String?
  jobTitle        String?
  email           String?
  phone           String?
  website         String?
  address         String?
  profilePhoto    String?
  coverPhoto      String?
  bio             String?
  socialLinks     Json?    // LinkedIn, Twitter, etc.
  customFields    Json?    // Additional custom contact fields
  theme           Json?    // Styling options
  downloadEnabled Boolean  @default(true) // Allow .vcf download
  viewCount       Int      @default(0)
  published       Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  qrCodes         QRCode[]

  @@index([userId])
  @@index([slug])
  @@index([published])
}

// ===== DIGITAL MENU / GALLERY =====
model DigitalMenu {
  id          String   @id @default(cuid())
  userId      String
  slug        String   @unique
  title       String
  description String?
  logo        String?
  coverImage  String?
  type        String   @default("menu") // 'menu', 'gallery', 'portfolio'
  categories  Json     // Array of {name, items: [{name, price, image, description}]}
  theme       Json?    // Branding, colors, layout
  settings    Json?    // Display options, currency, etc.
  viewCount   Int      @default(0)
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  qrCodes     QRCode[]

  @@index([userId])
  @@index([slug])
  @@index([type])
  @@index([published])
}

// ===== LEAD GENERATION GATE =====
model LeadGate {
  id            String   @id @default(cuid())
  userId        String
  name          String
  title         String
  description   String?
  fields        Json     // Form fields: [{name, type, required, placeholder}]
  redirectUrl   String   // Where to send after submission
  submitText    String   @default("Continue")
  theme         Json?    // Styling
  submissions   Json[]   @default([]) // Captured leads
  submissionCount Int    @default(0)
  published     Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  qrCodes       QRCode[]

  @@index([userId])
  @@index([published])
}

// ===== AUDIT LOG (COMPLIANCE & TRACKING) =====
model AuditLog {
  id          String   @id @default(cuid())
  userId      String
  action      String   // 'CREATE', 'UPDATE', 'DELETE', 'VIEW', 'EXPORT', 'LOGIN'
  entityType  String   // 'QRCode', 'Template', 'User', 'ApiKey', 'Webhook', etc.
  entityId    String?  // ID of the affected entity
  details     Json?    // Additional context (old/new values, IP, etc.)
  ipAddress   String?
  userAgent   String?
  timestamp   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([action])
  @@index([entityType])
  @@index([timestamp])
}

// ===== GDPR & COMPLIANCE SETTINGS =====
model ComplianceSettings {
  id                    String   @id @default(cuid())
  userId                String   @unique
  gdprMode              Boolean  @default(false) // Anonymize IP/Location
  dataRetentionDays     Int      @default(365)   // Auto-delete scans after N days
  anonymizeScans        Boolean  @default(false) // Don't store IP/Location
  allowDataExport       Boolean  @default(true)  // User can export their data
  allowDataDeletion     Boolean  @default(true)  // User can delete their data
  cookieConsentRequired Boolean  @default(true)  // Show cookie banner
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

